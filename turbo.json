{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*", "apps/*/.env*"],
            "outputs": [".next/**", "!.next/cache/**"],
            "env": ["API=https://next-hono-turborepo-2-0-api.vercel.app"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "turbo:dev": {
            "cache": false,
            "persistent": true
        }
    }
}
